<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/half_common_margin"
    android:paddingVertical="@dimen/quarter_common_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvPointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word_pointer"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/dark_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Quick"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:paddingHorizontal="@dimen/margin_top"
        app:layout_constraintHorizontal_bias="0"
        android:textColor="@color/dark_text"
        app:layout_constraintTop_toTopOf="@id/tvPointer"
        app:layout_constraintBottom_toBottomOf="@id/tvPointer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPointer"/>

</androidx.constraintlayout.widget.ConstraintLayout>