<resources>
    <!-- Base application theme. -->
    <style name="Theme.Thesaurus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_secondary</item>
        <item name="colorSecondaryVariant">@color/yellow_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash theme. -->
    <style name="Theme.Thesaurus.Splash" parent="Theme.SplashScreen">
        <!-- App icon for splash screen. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Theme to be applied after the splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.Thesaurus</item>
    </style>
</resources>